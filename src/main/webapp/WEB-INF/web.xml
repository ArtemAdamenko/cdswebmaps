        <servlet-name>GetCurrentRoutes</servlet-name>
        <url-pattern>/GetCurrentRoutes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCurrentRouteBuses</servlet-name>
        <url-pattern>/GetCurrentRouteBuses</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
</web-app>
